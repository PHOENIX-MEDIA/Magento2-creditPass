<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <creditpass>
            <settings>
                <active>0</active>
                <cp_url>https://secure.creditpass.de/atgw/authorize.cfm</cp_url>
                <live_mode>0</live_mode>
                <error_message>The selected payment method is currently not available. Please select another one.</error_message>
                <handle_error_code>0</handle_error_code>
                <send_email_for_manual_check>1</send_email_for_manual_check>
                <log_level>200</log_level>
            </settings>
        </creditpass>
    </default>
</config>